= form_for @speed_measurement do |f|
  - if @speed_measurement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@speed_measurement.errors.count, "error")} prohibited this speed_measurement from being saved:"
      %ul
        - @speed_measurement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :up
    = f.text_field :up
  .field
    = f.label :down
    = f.text_field :down
  .actions
    = f.submit 'Save'
